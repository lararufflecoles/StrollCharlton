<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.rufflecol.lara.strollcharlton">

    <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

        <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key"/>

        <activity android:name="es.rufflecol.lara.strollcharlton.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="es.rufflecol.lara.strollcharlton.ListViewActivity"
            android:label="@string/app_name">
            android:parentActivityName=".SplashScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SplashScreen" />
        </activity>

        <activity android:name="es.rufflecol.lara.strollcharlton.MapViewActivity"
            android:label="@string/app_name">
            android:parentActivityName=".ListViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListViewActivity" />
        </activity>

    </application>

</manifest>
