<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--Divider-->
    <style name="Divider" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fifteen_size</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <!--Toolbar Text-->
    <style name="ToolbarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Splash Screen Activity Text-->
    <style name="SplashScreenTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/eighteen_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--ListView Text-->
    <style name="ListViewTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fifteen_size</item>
    </style>


    <!--Detail, Settings, About and Activity Text-->
    <style name="GenericTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fifteen_size</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>