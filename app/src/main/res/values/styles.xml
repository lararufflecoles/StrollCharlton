<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--Toolbar Text-->
    <style name="ToolbarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Splash Screen Activity Text-->
    <style name="SplashScreenActivityTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/eighteen_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--Detail Activity Text-->
    <style name="DetailActivityTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fourteen_size</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--Settings and About Activities Text-->
    <style name="SettingsAndAboutActivitiesTextStyling" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fourteen_size</item>
        <item name="android:padding">20dp</item>
    </style>

</resources>